!!!
%html
  %head
    %title= title
    = stylesheet_link_tag "blueprint/screen", :media=> 'screen'
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    .container
      %header
        = image_tag("rails.png", :alt=> "Sampl App", :class=> "round")
        %nav.round
          = render :partial => "layouts/links"
      %section.round
        = yield
      %footer
        %nav.round
          %ul
            %li
              =link_to "About", "#"
            %li
              =link_to "Contact", "#"
            %li
              =link_to "News", "#"
            %li
              =link_to "Rails Tutorial", "#"

